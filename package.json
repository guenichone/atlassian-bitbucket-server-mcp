{
  "name": "@eguenichon/atlassian-bitbucket-server-mcp",
  "version": "1.0.0",
  "description": "Node.js/TypeScript MCP server for Atlassian Bitbucket. Enables AI systems (LLMs) to interact with workspaces, repositories, and pull requests via tools (list, get, comment, search). Connects AI directly to version control workflows through the standard MCP interface.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "commonjs",
  "bin": {
    "mcp-atlassian-bitbucket": "./dist/src/index.js"
  },
  "scripts": {
    "filter-spec": "python openapi/filter_openapi.py",
    "generate": "npx @openapitools/openapi-generator-cli generate -i openapi/bitbucket.downloaded.${BITBUCKET_VERSION:-8.19}.openapi.v3.json -g typescript-axios -o src/generated --config openapi/openapi-generator-config.json",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "clean": "rm -rf dist src/generated",
    "update-spec": "npm run filter-spec --",
    "build-app": "npm run generate && npm run lint && npm run build",
    "rebuild-app": "npm run clean && npm run build-app",
    "regenerate-and-build": "echo \"Specify version via BITBUCKET_VERSION env var\" && npm run clean && npm run generate && npm run lint && npm run build",
    "semantic-release": "semantic-release",
    "start": "npm run build && node dist/src/index.js"
  },
  "keywords": [
    "mcp",
    "typescript",
    "atlassian",
    "bitbucket",
    "repository",
    "version-control",
    "pull-request",
    "server",
    "model-context-protocol",
    "tools",
    "resources"
  ],
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/module-alias": "^2.0.4",
    "@types/nock": "^11.1.0",
    "@types/node": "^22.13.14",
    "@types/turndown": "^5.0.5",
    "eslint": "^9.23.0",
    "jest": "^29.7.0",
    "nock": "^14.0.3",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "axios": "^1.8.4",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "module-alias": "^2.2.3",
    "turndown": "^7.2.0",
    "zod": "^3.24.2"
  }
}
