# Enable debug logging
DEBUG=false

# --- Bitbucket Server/DC Configuration --- 
ATLASSIAN_BITBUCKET_SERVER_URL=https://your-bitbucket-instance.com
ATLASSIAN_BITBUCKET_ACCESS_TOKEN=your_personal_access_token

# --- MCP Server Configuration ---
# Transport mode: 'stdio' (default) or 'sse' (for HTTP/SSE)
MCP_TRANSPORT=stdio

# Port for HTTP/SSE transport (default: 3000)
PORT=3000

# Optional: Specify the Bitbucket Server version for OpenAPI spec download/generation
# Defaults to 8.19 if not set
BITBUCKET_VERSION=8.19
